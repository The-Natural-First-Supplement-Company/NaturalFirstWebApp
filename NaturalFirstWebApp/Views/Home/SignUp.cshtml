@{
    ViewData["Title"] = "SignUp Page";
    Layout = "_HomeLayout";
}

<div class="login-container" id="sign-up">
    <div class="company" style="text-align: center;">
        <h2><img src="~/images/logo.png" alt="logo" /></h2>
    </div>
    <h1>Sign Up</h1>
    <div class="form" id="sign-up-form">
        <label for="Email">Email:</label>
        <input type="email" id="Email" required>
        <div class="verification-container">
            <label for="verification-code">Verification Code:</label>
            <input type="text" id="verification-code" required>
            <button type="button" id="send-verification-btn" onclick="sendVerificationCode()">Send</button>
        </div>
        @*<p id="wait-time">Please wait 60 seconds for the next verification code.</p>*@
        <label for="Password">Create Password:</label>
        <input type="password" id="Password" required>
        <label for="confirm-password">Confirm Password:</label>
        <input type="password" id="confirm-password" required>
        <label for="ReferralCode">Invitation Code:</label>
        <input type="text" id="ReferralCode" readonly>
        <button type="submit" id="SubmitSignUp">Sign Up</button>
    </div>
    <div class="options">
        <a href="@Url.Action("Index","Home")" id="Back2Home">Back to Sign In</a>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Home/signup.js"></script>