
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    @RenderBody()
    <div class="footer">
        <div class="tabs">
            <div id="home-tab">
                <a href="@Url.Action("Index","User")">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </a>
            </div>
            <div id="salary-tab">
                <a href="@Url.Action("Salary","User")">
                    <i class="fas fa-money-bill-alt"></i>
                    <span>Salary</span>
                </a>
            </div>
            <div id="equipment-tab">
                <a href="@Url.Action("Products","Product")">
                    <i class="fas fa-tools"></i>
                    <span>Products</span>
                </a>
            </div>
            <div id="equipment-tab">
                <a href="@Url.Action("Income","User")">
                    <i class="fas fa-line-chart"></i>
                    <span>Income</span>
                </a>
            </div>
            <div id="me-tab">
                <a href="@Url.Action("Profile","User")">
                    <i class="fas fa-user"></i>
                    <span>Me</span>
                </a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        var currentUrl = window.location.href;

        // Get all the anchor tags in the tabs
        var tabLinks = document.querySelectorAll(".tabs a");

        // Loop through the anchor tags to check if their href matches the current URL
        tabLinks.forEach(function (link) {
            if (link.href === currentUrl) {
                // Add the active-link class to the <i> tag within the current tab
                var icon = link.querySelector("i");
                icon.classList.add("active-link");
            }
        });
    </script>
</body>
</html>
